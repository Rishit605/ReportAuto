<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ColorInvertBrush" Color="#FF000000" />

    <Style x:Key="ColorInvertBrushStyle" TargetType="TextBlock">
        <Style.Triggers>
            <Trigger Property="Foreground" Value="{StaticResource ColorInvertBrush}">
                <Setter Property="Foreground" Value="{StaticResource ColorInvertBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>